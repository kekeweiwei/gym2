.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 50rpx;
}

.form {
  width: 80%;
}

input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

button {
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  background-color: #1aad19;
  color: white;
}